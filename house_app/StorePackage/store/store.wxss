/* 背景图 */
.store_bg_box {
	position: relative;

}

.store_bg_box swiper {
	height: 50vh;
}

.store_bg_box swiper image {
	width: 100%;
	height: 100%;
}

/* 背景图 */

/* logo */
.logo_wrap {
	top: 38%;
	left: 50%;
	position: absolute;
	transform: translateX(-50%);
	

}

.store_logo_img {
	width: 300rpx;
	height: 300rpx;
	border-radius: 50%;
}

/* logo */
/* 门店 */
.store_wrap {
	width: 100%;
	top: 63%;
	left: 25%;
	position: absolute;
	
}

.store_item {
	margin: 15rpx 0;
	font-size: 40rpx;
	font-weight: 500;
	color: green;
}

/* 门店 */

/* 底部导航栏*/
.bottom_nav_box {
	width: 100%;
	height: 140rpx;
	display: flex;
	position: fixed;
	left: 0;
	bottom: 0;
	flex-direction: row;
	background-color: gainsboro;

}

.bottom_nav_item {
	flex: 25%;
	text-align: center;
}

.bottom_nav_item image {
	width: 60rpx;
	height: 60rpx;
	margin-top: 15rpx;
}

