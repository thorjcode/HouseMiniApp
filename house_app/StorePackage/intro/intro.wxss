/*轮播图*/
.swiper-box swiper {
	height: 400rpx;
}

.swiper-box image {
	width: 100%;
	height: 100%;
}

.content-box {
    margin: 15px;
    padding: 15px 20px 10px 20px;
    border: 1px solid rgba(39, 48, 57, 0.08);
    box-shadow: 10px 10px 5px rgba(39, 48, 57, 0.05);
    border-radius: 17px;
    background-color: #fff;
}

.content-title {
    padding: 10rpx;
    font-size: 15px;
    font-weight: bold;
}

.content-text {
    font-size: 13px;
    padding: 16rpx;
}
