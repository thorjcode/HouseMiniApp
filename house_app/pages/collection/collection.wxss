/* pages/collection/collection.wxss */
.list_box{
  display: flex;
  margin: 15rpx 15rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid gray;
  border-radius:20rpx;
  overflow: hidden;
  background-color: #fff;
}
.item{
  margin: 20rpx 20rpx;
  justify-content: space-between;
}
.img_box{
  width: 220rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.img_box image{
  width: 100%;
  height: 100%;
  
}
.info_box{
  margin-left: 30rpx;
}
.info_item{
  font-size: 13px;
}
.tips-box{
  margin: 15rpx 30rpx;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 24rpx;
  color:grey;
  background-color: #ffffff;
}