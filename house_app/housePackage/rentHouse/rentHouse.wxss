/* housePackage/rentHouse/rentHouse.wxss */

view {
  margin: 0;
  padding: 0;
}

.card_box {
  position: relative;
  box-sizing: border-box;
  margin: 10rpx 20rpx 10rpx 20rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
}

.card {
  display: flex;
}

.card_left {
  width: 35%;
  height: 200rpx;
  display: inline-block;
}

.card_left image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.card_right {
  width: 60%;
  margin-left: 20px;
  display: inline-block;
}

.card_title {
  margin-top: 5rpx;
  font-size: 15px;
  font-weight: bold;
  color: green;
}

.houseRoom {
  font-size: 13px;
}

.area {
  font-size: 10px;
}

.totalPrice {
  font-size: 15px;
  color: coral;

}

.averagePrice {
  font-size: 12px;

}

.location {
  font-size: 12px;

}

.houseTags {
  font-size: 10px;
  margin-bottom: 5rpx;
}