/* housePackage/houseDetail/houseDetail.wxss */

/* 轮播图 */

.swiper swiper {
  height: 600rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/* 房源标题 */

.header_box {
  width: 100%;
  padding: 8px 0;
  background-color: #fff;
}

.house_name {
  font-size: 18px;
  font-weight: bold;
  margin: 10rpx 10rpx 10rpx 10rpx;
  color: #2aa515;
}

.house_info {
  margin-left: 10rpx;
}

/* 联系方式 */

.contact_box {
  margin-top: 5px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: #fff;

}

.contact_item {
  height: 60px;
  margin-left: 10px;
  margin-right: 10px;
}

.contact_item image {
  width: 50px;
  height: 50px;
}

.name {
  height: 60px;
  line-height: 60px;
  font-size: 15px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.phone {
  height: 60px;
  line-height: 60px;
  font-size: 14px;
  color: dodgerblue;
}


/* 房源介绍 */

.introduce_box {
  margin-top: 5px;
  margin-bottom: 53px;
  padding: 8px;
  background-color: #fff;

}

.gray {
  color: gray;
}

.introduce_title {
  margin: 5px 0;
  font-size: 16px;
  font-weight: bold;
}

.introduce_content {
  margin-left: 5px;
  padding: 5px;
  font-size: 14px;
  border-bottom: 2rpx #f0f0f0 dashed;
}

/* 底部导航栏 */

.footer_nav {
  width: 100%;
  height: 50px;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.footer_left {
  width: 50%;
  height: 50px;
  padding-top: 3px;
  display: inline-block;
}

.footer_item {
  width: 50px;
  height: 50px;
  margin-left: 5px;
  display: inline-block;
  text-align: center;
}

.footer_item image {
  width: 25px;
  height: 25px;
}

.footer_right {
  width: 50%;
  height: 100%;
  line-height: 50px;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  display: inline-block;
  background-color: #2aa515;
}