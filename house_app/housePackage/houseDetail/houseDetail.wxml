<!--housePackage/houseDetail/houseDetail.wxml-->
<!-- 轮播图 -->
<view class="swiper">
  <swiper indicator-dots="true" autoplay="true" circular="true" interval="2000">
    <block wx:for="{{houseImg}}" wx:key="_id">
      <swiper-item>
        <image src="{{item}}"></image>
      </swiper-item>
    </block>
  </swiper>
</view>


<block wx:for="{{houseDetail}}" wx:key="_id">
  <!-- 房源标题 -->
  <view class="header_box">
    <view class="house_name">{{item.FormData.houseName}}</view>
    <view class="house_info">
      <view><text class="gray">{{item.EntrustType=='sale'?'售价：':'租：'}}</text><text style="color: coral; font-size: 19px;">{{item.FormData.totalPrice}}</text>{{item.EntrustType=='sale'?'万，':'元/月'}}<text class="gray">{{item.EntrustType=='sale'?'均价：':''}}</text>{{item.EntrustType=='sale'?item.FormData.averagePrice:''}}{{item.EntrustType=='sale'?'元/㎡':''}}</view>
      <view class=""><text class="gray">类型：</text>{{item.FormData.HouseType}} {{item.FormData.decorate}}</view>
      <view class=""><text class="gray">户型：</text>{{item.FormData.houseRoom}}</view>
      <view class=""><text class="gray">地址：</text>{{item.FormData.location}}</view>
    </view>
  </view>

  <!-- 联系方式 -->
  <view class="contact_box">
    <view class="contact_item">
      <image src="../images/my_agent.png"></image>
    </view>
    <view class="contact_item name">{{item.FormData.name}}</view>
    <view class="contact_item" data-phone="{{item.FormData.phone}}" bindtap="CallPhone">
      <image src="../images/phone.png"></image>
    </view>
    <view class="contact_item phone">{{item.FormData.phone}}</view>
  </view>


  <!-- 房源介绍  -->
  <view class="introduce_box">
    <view class="introduce_title">房源详情</view>
    <view class="introduce_content">
      <view><text class="gray">房源名字：</text>{{item.FormData.houseName}}</view>
      <view><text class="gray">地址：</text>{{item.FormData.location}}</view>
      <view><text class="gray">户型：</text>{{item.FormData.houseRoom}}</view>
      <view><text class="gray">装修：</text>{{item.FormData.decorate}}</view>
      <view><text class="gray">面积：</text>{{item.FormData.area}} ㎡</view>
      <view><text class="gray">朝向：</text>{{item.FormData.Invoice}}</view>
      <view><text class="gray">楼层：</text>{{item.FormData.floor}}</view>
      <view><text class="gray">{{item.EntrustType=='sale'?'售价：':'租：'}}</text>{{item.FormData.totalPrice}}<text>{{item.EntrustType=='sale'?'万':'元/月'}}</text></view>
      <view><text class="gray">{{item.EntrustType=='sale'?'均价：':''}}</text>{{item.EntrustType=='sale'?item.FormData.averagePrice:''}}{{item.EntrustType=='sale'?'元/㎡':''}}</view>
      <view><text class="gray">看房方式：</text>{{item.FormData.LookUpStyle}}</view>
      <view><text class="gray">{{item.EntrustType=='sale'?'交房时间：':''}}</text>{{item.FormData.maketime}}</view>
      <view><text class="gray">房源简介：</text>{{item.FormData.houseintro}}</view>
    </view>
  </view>

  <!-- 底部导航栏 -->
  <view class="footer_nav">
    <view class="footer_left">
      <view class="footer_item" bindtap="collection">
        <image src="../images/{{hasCollection?'collection':'uncollection'}}.png"></image>
      </view>
      <view class="footer_item" bindtap="Calc">
        <image src="../images/calculate.png"></image>
      </view>
    </view>
    <view class="footer_right" data-phone="{{item.FormData.phone}}" data-name="{{item.FormData.name}}" data-remark="{{item.FormData.location}}" bindtap="openActionSheet">预约看房</view>
  </view>
</block>