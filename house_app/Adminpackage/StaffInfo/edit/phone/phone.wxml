<!--pages/edit/phone/phone.wxml-->
<!-- 输入框 -->
<view class="input_box">
  <view class="input_title">修改电话</view>
  <view class="input_item">
    <label>电话：</label>
    <input type="number" maxlength="11" placeholder="输入电话" value="{{phone}}" data-key="phone" id="phone" name="phone"
      bindinput="inputData"></input>
  </view>
  <view class="input_desc">【提示】:请填写完整信息,点击确定保存。</view>
  <view class="input_button">
    <!-- 关闭输入框 -->
    <view class="bg_blue cancle_btn" bindtap="close">取 消</view>
    <!-- 确认提交 -->
    <view class="bg_green confirm_btn" data-id="{{id}}" bindtap="confirmSubmit">确认修改</view>
  </view>
</view>