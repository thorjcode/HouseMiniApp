<!--pages/edit/headImg/headImg.wxml-->
<view class="input_box">
  <view class="input_title">修改头像</view>
  <!-- 照片上传 -->
  <view class="cu-form-group">
    <view class='title'>
      <text decode="true">&nbsp;&nbsp;上传头像（{{staffImg.length}}/1）</text>
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-1 grid-square flex-sub">

      <!-- 上传图片按钮 -->
      <view class="add-img" wx:if="{{isChooseImg}}" bindtap="chooseImg">
        <image src="../../../images/add_img.png"></image>
      </view>

      <!-- 预览图片 -->
      <view class="bg-img" wx:for="{{staffImg}}" wx:key="index" bindtap="previewImg">
        <image src='{{staffImg}}' mode='aspectFill'></image>
        <!-- 删除图片 -->
        <view class="bg-red" catchtap="deleteImg">
          <text>x</text>
        </view>
      </view>

    </view>
  </view>

  <view class="input_desc">【提示】:点击右上角x即可选择新图片</view>
  <view class="input_button">
    <!-- 关闭输入框 -->
    <view class="bg_blue cancle_btn" bindtap="close">取 消</view>
    <!-- 确认提交 -->
    <view class="bg_green confirm_btn" data-id="{{id}}" bindtap="confirmSubmit">提交修改</view>
  </view>
</view>