page {
  width: 100%;
  height: 100vh;
}

/* edit_box */
.edit_box {
  margin: 10rpx 30rpx;
  padding: 60rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.edit_title {
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.edit_item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-flex;
  font-size: 14px;
  font-weight: bold;
  padding: 10rpx;
  border-bottom: 1px #42A5F5 solid;
}

